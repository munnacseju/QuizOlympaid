<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarid"
        ></ProgressBar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editProfileProgressBarid"
                android:visibility="gone"
                ></ProgressBar>




            <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/profileChangeLinearLayoutid"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    >
                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        >
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="25dp"
                            android:layout_gravity="center"
                            android:textColor="#0277BD"
                            android:background="@drawable/rounded_button"
                            ></TextView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:background="@drawable/rectengle_button_color"
                        >
                        <EditText

                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle_button"
                            android:id="@+id/epnameEditTextid"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:textColor="#004D40"
                            ></EditText>

                    </LinearLayout>

                </LinearLayout>




                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    >
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        >
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phone No"
                            android:textSize="25dp"
                            android:layout_gravity="center"
                            android:textColor="#0277BD"
                            android:background="@drawable/rectangle_button"
                            ></TextView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:background="@drawable/rectengle_button_color"
                        >
                        <EditText
                            android:background="@drawable/rectangle_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/epphoneNumberEditTextid"
                            android:textSize="20dp"
                            android:layout_gravity="center"
                            android:textColor="#004D40"
                            android:textAlignment="center"
                            ></EditText>
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    >
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        >

                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Institution"
                            android:textSize="25dp"
                            android:layout_gravity="center"
                            android:textColor="#0277BD"
                            android:background="@drawable/rounded_button"
                            ></TextView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rectengle_button_color"
                        android:padding="2dp"
                        >
                        <EditText
                            android:background="@drawable/rectangle_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/epinstitutionEditTextid"
                            android:textSize="20dp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textColor="#004D40"
                            ></EditText>
                    </LinearLayout>



                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    >
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        >
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Class"
                            android:textSize="25dp"
                            android:layout_gravity="center"
                            android:textColor="#0277BD"
                            android:background="@drawable/rectangle_button"
                            ></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:background="@drawable/rectengle_button_color"
                        >

                        <EditText
                            android:background="@drawable/rectangle_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/epclassEditTextid"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textColor="#004D40"
                            ></EditText>
                    </LinearLayout>

                </LinearLayout>
                <Button
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_button"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:text="Conform Edit Profile"
                    android:textColor="#004D40"
                    android:id="@+id/epeditProfileButtonid"
                    android:layout_marginBottom="5dp"
                    ></Button>
            </LinearLayout>




            <Button
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:textStyle="bold"
                android:layout_height="45dp"
                android:text="Change Profile Picture"
                android:textColor="#004D40"
                android:id="@+id/epchangeProfilePictureButtonid"
                android:background="@drawable/rounded_button"
                android:layout_marginBottom="20dp"
                ></Button>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/profilePicChangeLinearLayoutid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <ImageView
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/epchangeImageid"
                    ></ImageView>

                <Button
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_button"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:text="confirm Profile picture"
                    android:id="@+id/confirmButtonid"
                    android:textColor="#004D40"
                    android:textStyle="bold"
                    ></Button>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>

